{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "UMD",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "skipLibCheck": false,
    "types": [] // Required to prevent Node.js and Jest globals from leaking into our build
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__/**/*.ts"]
}
